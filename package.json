{
  "name": "fullstack-employees",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node --env-file=.env server.js",
    "dev": "node --watch --env-file=.env server.js",
    "test": "vitest",
    "test:database": "vitest database",
    "test:server": "vitest server",
    "test:dbSpecific": "vitest ./__tests__/server.db.test.js",
    "db:schema": "psql -U practice -d fullstack_employees -f ./db/schema.sql",
    "db:seed": "node --env-file=.env db/seed.js",
    "db:reset": "npm run db:schema && npm run db:seed"
  },
  "imports": {
    "#*": "./*.js"
  },
  "dependencies": {
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "supertest": "^7.1.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22"
  }
}
